<h1>The cheerups will be below</h1>

<ul>
  <% @cheerups.each do |cheerup| %>
  <li>
    <div class="cheerup">
      <h3><%= " #{cheerup.title}"%> </h3>
      <h4><%=" by #{cheerup.user.user_name} the #{cheerup.user.animal}" %></h4>
      <p><%= cheerup.body %></p>
      <% if cheerup.user == current_user %>
        <%= link_to "Edit Your cheerup" , edit_cheerup_path(id: cheerup.id) %>
      <% end %>
    </div>
  </li>
  <% end %>
</ul>
